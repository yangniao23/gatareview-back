# Rails Backend Environment Variables Example
# Copy this file to .env and fill in the actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=gatareview_development
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
DATABASE_URL=mysql2://your_username:your_password@localhost:3306/gatareview_development

# Google OAuth Configuration
GOOGLE_CLIENT_ID=# Same as frontend - get from Google Cloud Console
GOOGLE_CLIENT_SECRET=# Same as frontend - get from Google Cloud Console

# reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=# Get from Google reCAPTCHA (server-side key)

# JWT Configuration
RAILS_SECRET_KEY_BASE=# Generate with: rails secret
JWT_SECRET_KEY=# Alternative JWT secret (optional)

# Production Database Configuration (for deployment)
# DATABASE_URL=mysql2://username:password@host:port/database_name

# CORS Configuration
# CORS_ORIGINS=https://your-frontend-domain.com

# Rails Environment
RAILS_ENV=development
RACK_ENV=development